<h1>Sign-Up</h1>
<form id="signup-form">
    <div class="form-group">
        <label for="username-signup" class="form-label">Username</label>
        <input id="username-signup" type="text" class="form-input form-control" />
    </div>
    <div class="form-group">
        <label class="form-label" for="password-signup">Password</label>
        <input id="password-signup" type="password" class="form-input form-control" aria-describedby="passwordHelp" />
        <small id="passwordHelp" class="form-text text-muted">Passwords should be 8 or more characters</small>
    </div>
    <div class="d-flex align-items-end flex-column justify-content-end mb-3">
        <button type="submit" class="btn btn-deep-purple">Sign up</button>
        <a class="login-link" href="/login"><small>Log in instead</small></a>
    </div>
</form>

<!-- Script Area -->
<script src="/javascript/signup.js"></script>