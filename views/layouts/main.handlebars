<body>
    <!-- Header Area -->
    <header id="#" class="header-bar">
        <div class=" container">
            <div class="row">
                <div class="col-12 col-sm-1 column">
                    <a href="/">
                        <h1 class="uppercase flex-column"><span>Nebula</span>
                            <div class="w-100"></div>
                            <span style="font-size: 50px;">Edu</span>
                        </h1>
                    </a>
                </div>
                <div class="col-12 col-sm-9 ship">
                    <img class="ship-img" src="/images/ship-trail.png" alt="Rocket Ship Graphic" />
                </div>
                <div class="col-12 col-sm-1 login text-center">
                    {{!-- Logout Area only displays if User is loggedIn --}}
                    {{#if loggedIn}}
                    <a href="/logout" id="logout" class="test">Logout</a>
                    {{else}}
                    <a href="/login" id="login-btn" class="test">Login</a>
                    {{/if}}
                </div>
            </div>
        </div>
