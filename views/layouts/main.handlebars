                    <p class="uppercase nav-header">Learn</p>
                    <ul class="nav-list">
                        <li class="nav-item" id="html"><a href="/html">HTML</a></li>
                        <li class="nav-item" id="css"><a href="/css">CSS</a></li>
                        <li class="nav-item" id="js"><a href="/js">Javascript</a></li>
                    </ul>
                </div>
                <div class="nav-block">
                    <p class="uppercase nav-header">Inspiration</p>
                    <ul class="nav-list">
                        <li class="nav-item" id="design"><a href="/design">Designs</a></li>
                        <li class="nav-item"><a href="/website">Websites</a></li>
                        <li class="nav-item"><a href="/application">Applications</a></li>
                        <li class="nav-item"><a href="/game">Games</a></li>
                    </ul>
                </div>
                {{#if loggedIn}}
                <div class="nav-block">
                    <p class="uppercase nav-header">Community</p>
                    <ul class="nav-list">
                        <li class="nav-item"><a href="/community">Community Posts</a></li>
                        <li class="nav-item"><a href="/dashboard">Your Posts</a></li>
                    </ul>
                </div>
                {{/if}}
            </div>
        </nav>

        {{!-- Main Body/Content Area --}}
        <main class="container col-12 col-sm-12 col-md-8">
            {{{ body }}}
        </main>

